html {
    min-height: 100vh;
    font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
}

body {
    margin: 0;
    padding: 0;
    height: 100%;
    text-align: center;
}

.wrap-box {
    margin: 100px;
    overflow: hidden;
    position: relative;
    box-shadow: 0px 0px 4px px rgba(0, 0, 0, 0.1);
    border-radius: 30px;

    &, .blur, .content {
        display: inline-block;
        height: 400px;
        width: 400px;
    }

    .blur {
        position: absolute;
        filter: blur(36px);
        background: url('/assets/bg-1.png');
        background-position: center;
        background-size: cover;
        z-index: -1;
    }

    .content {
        line-height: 400px;
        color: white;
    }
}
